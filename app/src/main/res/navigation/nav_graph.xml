<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.moviebox.ui.MoviesFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.moviebox.ui.DetailsFragment"
        android:label="{movie}"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="movie"
            app:argType="com.example.moviebox.model.Result" />
        <action
            android:id="@+id/action_detailsFragment_to_actorBottomSheetDialogFragment"
            app:destination="@id/actorBottomSheetDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.moviebox.ui.FavoritesFragment"
        android:label="Favorites" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.moviebox.ui.SearchFragment"
        android:label="Search" >
        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <dialog
        android:id="@+id/actorBottomSheetDialogFragment"
        android:name="com.example.moviebox.ActorBottomSheetDialogFragment"
        android:label="ActorBottomSheetDialogFragment" >
        <argument
            android:name="actor"
            app:argType="com.example.moviebox.model.Cast" />
    </dialog>
</navigation>